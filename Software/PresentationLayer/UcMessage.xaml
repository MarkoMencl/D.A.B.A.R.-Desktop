<UserControl x:Class="PresentationLayer.UcMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Izradio: Marko Mencl -->
    
    <Border Background="White" CornerRadius="5" Padding="10" Margin="10" MaxWidth="400" MinWidth="200">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.3"/>
        </Border.Effect>

        <StackPanel Background="White">
            <StackPanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="Margin" Value="10,0,10,10"/>
                </Style>
            </StackPanel.Resources>

            <TextBlock x:Name="txtblUsername" Text="Username"/>
            <TextBlock x:Name="txtblMessageContent" Text="Content"/>
            <TextBlock x:Name="txtblDate" Text="12.06.2024. 12:02:53" HorizontalAlignment="Right"/>
        </StackPanel>
    </Border>
</UserControl>
