<UserControl x:Class="PresentationLayer.UcMyAds"
             xmlns:res="clr-namespace:PresentationLayer.Resources"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1444">
    <!-- Izradio: Andrija Štimac -->

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="20,35,20,50">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{x:Static res:Strings.MyAds}" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="#008080" 
                       HorizontalAlignment="Center" 
                       Margin="0,20,0,40"/>

            <ItemsControl Grid.Row="1" Name="MyAdsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#4aa5a5" 
                                BorderThickness="2" 
                                Margin="10" 
                                Padding="10" 
                                Background="White" 
                                CornerRadius="10" 
                                Width="220" 
                                Height="340">
                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">

                                <Grid Height="140" ClipToBounds="True" Margin="0,0,0,10">
                                    <Image Source="{Binding ImageSource}" 
                                           Stretch="Uniform" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center"/>
                                </Grid>

                                <TextBlock Text="{Binding title}" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           TextWrapping="Wrap" 
                                           TextAlignment="Center" 
                                           Foreground="#008080"
                                           MinHeight="40"/>

                                <TextBlock Text="{Binding description}" 
                                           FontSize="12" 
                                           Foreground="Gray" 
                                           TextWrapping="Wrap" 
                                           TextAlignment="Center" 
                                           MinHeight="40"/>

                                <TextBlock Text="{Binding price, StringFormat=C}" 
                                           FontSize="14" 
                                           FontWeight="Bold" 
                                           Foreground="DarkGreen" 
                                           TextAlignment="Center" 
                                           Margin="0,5,0,10"/>

                                <Grid HorizontalAlignment="Center" Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Content="{x:Static res:Strings.Edit}" 
                                            Click="UpdateAd_Click" 
                                            Width="90" 
                                            Height="30" 
                                            Background="#008080" 
                                            Foreground="White"
                                            BorderBrush="Transparent"
                                            CommandParameter="{Binding id}" 
                                            Grid.Column="0"/>

                                    <Button Content="{x:Static res:Strings.Delete}" 
                                            Click="DeleteAd_Click" 
                                            Width="90" 
                                            Height="30" 
                                            Background="#D9534F" 
                                            Foreground="White" 
                                            BorderBrush="Transparent"
                                            CommandParameter="{Binding id}" 
                                            Grid.Column="2"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </ScrollViewer>
</UserControl>